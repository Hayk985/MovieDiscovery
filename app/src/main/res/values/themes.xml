<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieDiscovery" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/midnight_blue</item>
        <item name="colorPrimaryVariant">@color/midnight_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_yellow_A700</item>
        <item name="colorSecondaryVariant">@color/material_amber_A700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="ChipStyle">
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeColor">@color/material_yellow_A700</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

</resources>